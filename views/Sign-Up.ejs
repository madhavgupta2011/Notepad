<!DOCTYPE html>
<%- include('partials/header.ejs') %>
</head>

<body>
    <%- include('partials/navbar.ejs') %>
    <div class="container">
        <%-include('partials/card-bg.ejs')%>
        <h5 class="card-header text-center">Create Account</h5>
        <div class="card-body center">
            <form method="POST" action="/sign-up">
                <div class="form-row">
                    <div class="form-group col-sm-6">
                        <label>Name</label>
                        <input type="text" class="form-control" name="name" id="exampleFormControlInput1" placeholder="Your Name"
                            required>
                    </div>
                    <div class="form-group col-sm-6">
                        <label>Email</label>
                        <input type="text" class="form-control" name="email" placeholder="Email" required>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-sm-6">
                        <label>Password</label>
                        <input class="form-control" type="password" name="password"></input>
                    </div>
                    <input type="hidden" name="_csrf" value= "<%= csrfToken %>">
                    <!-- <div class="form-group col-sm-6">
                        <label>Confirm Password</label>
                        <input class="form-control" type="password" name="password"></input>
                    </div> -->
                </div>

                <button type="submit" class="btn btn-outline-primary">Sign Up</button>
            </form>
        </div>
    </div>
    </div>
    <%- include('partials/scripts.ejs') %>
</body>

</html>